@using System;
@using System.Linq;
@using Trips.Models;
@using Trips.ViewModels; 
@model IEnumerable<ItineraryViewModel>

<!-- Ensure Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

<!-- Ensure jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

<!-- Ensure Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>

<h2>Select Your Itinerary Service</h2>
<br>
<a href="@Url.Action("Create", "Itinerary")" class="txt-light-blue">Create Your Own!</a>
<br>
<a href="@Url.Action("PreMade", "Itinerary")" class="txt-light-blue">Select a Pre-Made Itinerary!</a>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h4>Images of Venice</h4>
        </div>
    </div>
</div>

<div id="itineraryCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
            <li data-target="#itineraryCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>

    <div class="carousel-inner">
        @foreach (var itinerary in Model)
        {
            <div class="carousel-item @(itinerary == Model.FirstOrDefault() ? "active" : "")">
                <img src="@itinerary.ImageUrl" class="d-block w-100 max-width-img" alt="@itinerary.Title">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@itinerary.Title</h5>
                    <p>@itinerary.Description</p>
                </div>
            </div>
        }
    </div>

    <a class="carousel-control-prev" href="#itineraryCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#itineraryCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.carousel').carousel({
                interval: 1000 // Adjust the interval as needed
            });
        });
    </script>

    <style>
        #itineraryCarousel {
        padding: 40px;
    }
        /* Define max width for carousel images */
        .max-width-img {
            max-width: 100%; /* Adjust as needed */
            height: auto;
        }
    </style>
}