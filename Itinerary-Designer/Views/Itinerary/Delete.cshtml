@using System;
@using Trips.Models;
@model List<Itinerary>

@{
    ViewData["Title"] = "DELETE Itineraries";
    ViewData["Controller"] = "ItineraryController";
}

<div class="main">
    <h3>Delete Itineraries</h3>
    @if (Model.Count > 0)
    {
        <form asp-action="Delete" method="post">
            <div class="checkbox-group">
                @foreach (Itinerary itinerary in Model)
                {
                    <label>
                        <input type="checkbox" name="ItineraryIds" value="@itinerary.Id" />
                        <span>@itinerary.Name</span> <!-- Display itinerary name or other relevant info -->
                    </label>
                }
            </div>
            <button class="delete" type="submit">Delete Selected Itineraries</button>
        </form>
    }
    else
    {
        <em>No itineraries to display.</em>
    }

</div>