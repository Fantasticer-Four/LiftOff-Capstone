@using System;
@using Trips.Models;
@model CreateItineraryViewModel

@{
    ViewData["Title"] = "DELETE Itineraries";
    ViewData["Controller"] = "ItineraryController";
}

<div class="main">
    <h3>Delete Itineraries</h3>
    @if (Model.Count > 0)
    {
        <form method="POST">
            <div class="checkbox-group">
                @foreach (Itinerary itinerary in Model)
                {
                    <label>
                        <input type="checkbox" name="artworkIds" value="@itinerary.Id" />
                        <span>@itinerary</span>
                    </label>
                }
            </div>
            <button class="delete" type="submit">Delete Selected Itinerariess</button>
        </form>
    }
    else
    {
        <em>No itineraries to display.</em>
    }
</div>