@model CreateItineraryViewModel

<h2>Create Itinerary</h2>

<div class="form-container">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Select Categories:</label><br />
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="SelectedCategories" value="All" id="allCategories" checked />
                    All Categories
                </label>
            </div>
            @foreach (var category in Model.AvailableCategories)
            {
                bool isChecked = Model.SelectedCategories.Contains(category);
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="SelectedCategories" value="@category" checked="@isChecked" class="category-checkbox" />
                        @category
                    </label>
                </div>
            }
        </div>

        <div class="form-group">
            <label>Select Locations:</label><br />
            @foreach (var location in Model.AvailableLocations)
            {
                bool isChecked = Model.SelectedLocationIds.Contains(location.Id);
                <div class="checkbox location-checkbox" data-category="@location.Category">
                    <label>
                        <input type="checkbox" name="SelectedLocationIds" value="@location.Id" checked="@isChecked" />
                        @location.Name
                    </label>
                </div>
            }
            <span asp-validation-for="SelectedLocationIds" class="text-danger"></span>
        </div>

         <div class="form-group">
        <label asp-for="NumberOfPeople">Number of People:</label>
        <input asp-for="NumberOfPeople" type="number" class="form-control" />
        <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
    </div>

      <div class="form-group">
        <<label for="NumberOfPets">Number of Pets:</label>
    <select asp-for="NumberOfPets" class="form-control" id="NumberOfPets">
        <option value="0">0</option>
        <option value="1">1</option>
        <option value="2">2</option>
    </select>
    </div>

        <div class="form-group">
            <label for="Date">Date:</label>
            <input type="date" id="Date" name="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create Itinerary</button>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initially hide all location checkboxes if "All Categories" is selected
            if ($('#allCategories').is(':checked')) {
                $('.location-checkbox').show();
            } else {
                $('.location-checkbox').hide();
            }

            // Update location checkboxes based on selected categories
            $('input[name="SelectedCategories"]').change(function() {
                if ($(this).attr('id') === 'allCategories') {
                    if ($(this).is(':checked')) {
                        $('.category-checkbox').prop('checked', false);
                        $('.location-checkbox').show();
                    } else {
                        $('.location-checkbox').hide();
                    }
                } else {
                    $('#allCategories').prop('checked', false);

                    var selectedCategories = $('input[name="SelectedCategories"]:checked').map(function() {
                        return $(this).val();
                    }).get();

                    if (selectedCategories.length === 0) {
                        $('.location-checkbox').hide();
                    } else {
                        $('.location-checkbox').each(function() {
                            var category = $(this).data('category');
                            if (selectedCategories.includes(category)) {
                                $(this).show();
                            } else {
                                $(this).hide();
                            }
                        });
                    }
                }
            });

            // Calculate and update total cost based on number of people and selected locations
            $('#NumberOfPeople').change(function() {
                var numberOfPeople = $(this).val();

                // Initialize total cost
                var totalCost = 0;

                // Calculate total cost for selected locations
                $('.location-checkbox input:checked').each(function() {
                    var locationId = $(this).val();
                    var pricePerPerson = parseFloat($(this).closest('.location-checkbox').find('.price-per-person').text().replace('$', ''));
                    totalCost += numberOfPeople * pricePerPerson;
                });

                // Update total cost input field
                $('#TotalCost').val(totalCost.toFixed(2));
            });
        });
    </script>
}