@model CreateItineraryViewModel

<h2>Create Itinerary</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Select Locations:</label><br />
        @foreach (var location in Model.AvailableLocations)
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="location_@location.Id" value="@location.Id" asp-for="Model.LocationIds" />
                    @location.Name 
                </label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Create Itinerary</button>
</form>
