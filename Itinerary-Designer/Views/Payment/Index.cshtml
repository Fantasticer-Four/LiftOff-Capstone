@model Trips.Models.PaymentViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Payment and Currency Conversion</title>
</head>
<body>
    <h1>Payment Details</h1>
    <form method="post" asp-action="ProcessPayment" asp-controller="Payment">
        <div>
            <label for="UserId">User ID:</label>
            <input type="text" id="UserId" name="PaymentModel.UserId" />
        </div>
        <div>
            <label for="CreditCardNumber">Credit Card Number:</label>
            <input type="text" id="CreditCardNumber" name="PaymentModel.CreditCardNumber" />
        </div>
        <div>
            <label for="ExpirationDate">Expiration Date (MM/YY):</label>
            <input type="text" id="ExpirationDate" name="PaymentModel.ExpirationDate" />
        </div>
        <div>
            <label for="CVV">CVV:</label>
            <input type="text" id="CVV" name="PaymentModel.CVV" />
        </div>
        <button type="submit">Submit Payment</button>
    </form>

    <h1>Currency Conversion</h1>
    <form method="post" asp-action="ConvertCurrency" asp-controller="Payment">
        <div>
            <label for="FromCurrency">From Currency:</label>
            <input type="text" id="FromCurrency" name="ConvertRequest.FromCurrency" />
        </div>
        <div>
            <label for="ToCurrency">To Currency:</label>
            <input type="text" id="ToCurrency" name="ConvertRequest.ToCurrency" />
        </div>
        <div>
            <label for="Amount">Amount:</label>
            <input type="number" id="Amount" name="ConvertRequest.Amount" step="0.01" />
        </div>
        <button type="submit">Convert</button>
    </form>

    @if (Model.ConvertResponse != null)
    {
        <h2>Conversion Result</h2>
        <p>@Model.ConvertResponse.Result</p>
    }
</body>
</html>
