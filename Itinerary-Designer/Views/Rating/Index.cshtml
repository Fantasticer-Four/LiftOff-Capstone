@{
    ViewBag.Title = "Rating";
    int itemId = ViewBag.ItemId;
    double averageRating = ViewBag.AverageRating;
}
<div>
    <h1 style="font-family: 'Dancing Script', cursive;">Please rate your experience with us!</h1>
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <!-- Import Google Font: Dancing Script -->
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&display=swap" rel="stylesheet">
    
    <style>
        .star {
            font-size: 2em;
            color: lightgray;
            cursor: pointer;
            text-decoration: none;
        }
        .selected {
            color: gold;
        }
    </style>
</head>
<body>
    <div>
        <h3>Our customers average rated experience: @averageRating.ToString("0.00")</h3>
    </div>

    <form method="post" asp-controller="Rating" asp-action="Rate">
        <input type="hidden" name="itemId" value="@itemId" />
        <div class="rating">
            @for (int i = 1; i <= 5; i++)
            {
                <input type="radio" id="star-@i" name="stars" value="@i" class="star @(i <= averageRating ? "selected" : "")" />
                <label for="star-@i">@i&#9733;</label>
            }
        </div>
        <button type="submit">Submit Rating</button>
    </form>
</body>
</html>

